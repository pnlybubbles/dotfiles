{
  "title": "ctrl-j",
  "rules": [
    {
      "description": "Ctrl+jを押したときに、escと英数キーも送信する（vim用）",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "escape"
            },
            {
              "key_code": "japanese_eisuu"
            }
          ]
        }
      ]
    }
  ]
}
